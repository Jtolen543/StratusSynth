{
  "name": "api",
  "scripts": {
    "dev": "bun run --hot src/server.ts",
    "expose": "concurrently \"tsx scripts/smee.ts\" \"tsx scripts/stripe.ts\"",
    "expose:stripe": "tsx scripts/stripe.ts",
    "migrate:auth": "bunx @better-auth/cli@latest generate --config src/lib/auth/index.ts",
    "migrate:gen": "drizzle-kit generate",
    "migrate:dev": "dotenv -e .env tsx scripts/migrate.ts",
    "migrate:prod": "dotenv -e .env.prod tsx scripts/migrate.ts"
  },
  "dependencies": {
    "@better-auth/passkey": "^1.4.1",
    "@neondatabase/serverless": "^1.0.2",
    "@react-email/components": "^1.0.1",
    "better-auth": "^1.4.1",
    "drizzle": "^1.4.0",
    "drizzle-orm": "^0.44.7",
    "hono": "^4.10.5",
    "resend": "^6.4.2",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@types/bun": "latest"
  }
}